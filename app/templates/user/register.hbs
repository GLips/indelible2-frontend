<h1>Register</h1>
<form {{action 'register' on='submit'}}>
  <label for="username">username</label>
  {{input id="username" name="username" value=model.username}}
  <br/>

  <label for="email">email</label>
  {{input id="email" name="email" value=model.email type="email"}}
  <br/>

  <label for="password">password</label>
  {{input id="password" name="password" value=model.password type="password"}}
  <br/>

  <label for="passwordConfirm">confirm password</label>
  {{input id="passwordConfirm" name="passwordConfirm" value=model.passwordConfirm type="password"}}
  <br/>

  {{input type="submit" value="register"}}
</form>
